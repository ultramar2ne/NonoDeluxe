<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/history_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1111"
        android:textSize="20sp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/history_txt_change"/>

    <TextView
        android:id="@+id/history_txt_change"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="입고:"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/history_date"
        app:layout_constraintRight_toLeftOf="@id/history_change"/>

    <TextView
        android:id="@+id/history_change"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="1111"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/hitory_txt_stock"
        app:layout_constraintLeft_toRightOf="@id/history_txt_change"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/hitory_txt_stock"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="재고:"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/history_stock"
        app:layout_constraintLeft_toRightOf="@id/history_change"/>

    <TextView
        android:id="@+id/history_stock"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="2222"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/hitory_txt_stock"/>


</androidx.constraintlayout.widget.ConstraintLayout>