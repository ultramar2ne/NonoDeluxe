<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--    Date of modification-->
    <TextView
        android:id="@+id/inventory_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1111"
        android:textSize="20sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/inventory_txt_change"/>

<!--    will change type-->
    <TextView
        android:id="@+id/inventory_txt_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/inventory_date"
        app:layout_constraintRight_toLeftOf="@id/inventory_change"/>

<!--    stock of modification-->
    <TextView
        android:id="@+id/inventory_change"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/inventory_txt_stock"
        app:layout_constraintLeft_toRightOf="@id/inventory_txt_change"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/inventory_txt_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_stock"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/inventory_stock"
        app:layout_constraintLeft_toRightOf="@id/inventory_change"/>

<!--    current stock-->
    <TextView
        android:id="@+id/inventory_stock"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/inventory_txt_stock"/>


</androidx.constraintlayout.widget.ConstraintLayout>