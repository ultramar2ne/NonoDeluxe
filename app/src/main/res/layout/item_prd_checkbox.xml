<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <TextView
        android:id="@+id/prdChk_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="category"
        android:textSize="15sp"
        android:fontFamily="@font/jsdongkang"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/prdChk_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="1"/>

    <TextView
        android:id="@+id/prdChk_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="prd_name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/jsdongkang"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.05"/>



    <CheckBox
        android:id="@+id/prdChk_checkbox"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="20sp"
        android:fontFamily="@font/jsdongkang"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/prdChk_name"
        app:layout_constraintHorizontal_bias="1"/>



</androidx.constraintlayout.widget.ConstraintLayout>