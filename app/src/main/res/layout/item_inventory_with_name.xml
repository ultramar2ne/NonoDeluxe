<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--    Item name-->
    <TextView
        android:id="@+id/inventory_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="1111"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/inventory_date"/>


    <!--    Modification date-->
    <TextView
        android:id="@+id/inventory_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1111"
        android:textSize="18sp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/inventory_name"
        app:layout_constraintRight_toLeftOf="@id/inventory_txt_change"/>

<!--    will change type-->
    <TextView
        android:id="@+id/inventory_txt_change"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/inventory_date"
        app:layout_constraintRight_toLeftOf="@id/inventory_change"/>

<!--    stock of modification-->
    <TextView
        android:id="@+id/inventory_change"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/inventory_txt_change"
        android:layout_marginEnd="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>